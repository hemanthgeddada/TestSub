<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.mavride.BridgeDropLocation">


    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Bridge (NH - MAC)"
        android:id="@+id/btnBridgeNH"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Bridge (SH - MB)"
        android:id="@+id/btnBridgeSH"
        android:layout_below="@+id/btnBridgeNH"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/btnBridgeNH"
        android:layout_alignStart="@+id/btnBridgeNH" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Bridge (UH - DH)"
        android:id="@+id/btnBridgeUH"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnBridgeSH"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
