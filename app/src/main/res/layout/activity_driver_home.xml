<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dell.mavride.DriverHome"
    android:id="@+id/driver_home">

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/dvrTxtName"
        android:layout_gravity="right"
        android:text="Id"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

     <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/dvrTxtLoc"
        android:layout_gravity="right"
        android:text="Source"
         android:layout_below="@+id/dvrTxtName"
         android:layout_alignLeft="@+id/dvrTxtName"
         android:layout_alignStart="@+id/dvrTxtName" />
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/dvrTxtDes"
        android:layout_gravity="right"
        android:text="@string/Destination"
        android:layout_below="@+id/dvrTxtLoc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider Id : "
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source : "
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination : "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status : "
        android:id="@+id/textView7"
        android:layout_below="@+id/dvrTxtDes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/dvrTxtSts"
        android:layout_below="@+id/dvrTxtDes"
        android:layout_alignLeft="@+id/dvrTxtDes"
        android:layout_alignStart="@+id/dvrTxtDes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of Riders : "
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riders"
        android:id="@+id/dvrTxtRidCnt"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/dvrTxtSts"
        android:layout_alignStart="@+id/dvrTxtSts" />

</RelativeLayout>
